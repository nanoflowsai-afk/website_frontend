{
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://website-backend-b00n.onrender.com/api/$1"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "https://website-backend-b00n.onrender.com/uploads/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}